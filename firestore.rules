rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /exercises/{exerciseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /workouts/{workoutId} {
      allow read: if true; // template workouts are readable by all
      allow write: if request.auth != null && (!resource.data.isTemplate || request.auth.uid == resource.data.userId);
    }
    match /programs/{programId} {
      allow read: if true; // template programs are readable by all
      allow write: if request.auth != null && (!resource.data.isTemplate || request.auth.uid == resource.data.userId);
    }
  }
}